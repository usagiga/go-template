# Generated by github.com/usagiga/editorconfig
# https://github.com/usagiga/editorconfig

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# In default, tab_width is set the value of indent_size
# tab_width = 4

[*.go]
indent_style = tab

[Makefile]
indent_style = tab

[*.{json,yml,yaml}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.{json.tftpl, tf, hcl, tfvars, tfstate, tfstate.backup}]
indent_size = 2

[*.md]
# Default

[*.{pl,t}]
# Default

[*.{js,jsx,ts,tsx,css,scss}]
# To configure their rules, use ESLint / Prettier
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

